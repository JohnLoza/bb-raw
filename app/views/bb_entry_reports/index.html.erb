<% pagination = paginate @reports, theme: 'custom' %>

<div class="row">
  <div class="col-md-12">

    <div class="card card-nav-tabs">
      <%= render partial: '/shared/cards/card_header_with_search', locals: {
        search_url: bb_entry_reports_path, new_url: new_bb_entry_report_path,
        title: label_for_model(BbEntryReport), required_role: User::ROLES[:formulation]} %>

      <div class="card-content table-responsive">
        <%= content_tag(:div, pagination, class: 'text-center') %>

        <table class="table table-hover">
          <thead>
            <th>
              <i class="material-icons">search</i>
              <%= content_tag(:span, BbEntryReport.human_attribute_name(:hash_id)) %>
            </th>
            <%= content_tag(:th, BbEntryReport.human_attribute_name(:user_id)) %>
            <%= content_tag(:th, t(:created_at)) %>
            <%= content_tag(:th, BbEntryReport.human_attribute_name(:authorizer_id)) %>
            <%= content_tag(:th, BbEntryReport.human_attribute_name(:authorized_at)) %>
            <%= content_tag(:th, t(:actions)) %>
          </thead>
          <tbody>
            <%= render @reports %>
          </tbody>
          <tfoot>
            <tr>
              <%= content_tag(:td, pagination, {colspan: 10, class: 'text-center'}) %>
            </tr>
          </tfoot>
        </table>

      </div>
    </div>

  </div>
</div>
