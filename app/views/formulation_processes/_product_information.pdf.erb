<div class="col-md-8 product-information-container pull-left">
  <table class="table table-striped table-bordered">
    <tbody>

      <tr>
        <td colspan="2" class="text-center">
          <%= FormulationProcess.human_attribute_name(:product_name) %>: <%= @formulation_process.product_name %>
        </td>
      </tr>
      <tr class="text-right">
        <td><%= FormulationProcess.human_attribute_name(:net_amount) %></td>
        <%= content_tag(:td, @formulation_process.net_amount) %>
      </tr>
      <tr class="text-right">
        <td><%= FormulationProcess.human_attribute_name(:number_of_cuvettes) %></td>
        <%= content_tag(:td, @formulation_process.number_of_cuvettes) %>
      </tr>
      <tr class="text-right">
        <td><%= FormulationProcess.human_attribute_name(:prorated_expiration_date) %></td>
        <%= content_tag(:td, @formulation_process.prorated_expiration_date) %>
      </tr>
      <tr class="text-right">
        <td><%= FormulationProcess.human_attribute_name(:gustatory_expiration_date) %></td>
        <%= content_tag(:td, @formulation_process.gustatory_expiration_date) %>
      </tr>
      <tr class="text-right">
        <td><%= FormulationProcess.human_attribute_name(:microbial_expiration_date) %></td>
        <%= content_tag(:td, @formulation_process.microbial_expiration_date) %>
      </tr>
      <tr class="text-right">
        <td><%= FormulationProcess.human_attribute_name(:product_life) %></td>
        <%= content_tag(:td, @formulation_process.product_life) %>
      </tr>
      <tr class="text-right">
        <td colspan="2"><%= FormulationProcess.human_attribute_name(:equipment_used) %></td>
      </tr>
      <tr><%= content_tag(:td, @formulation_process.equipment_used, colspan: 2) %></tr>
      <tr class="text-right">
        <td><%= FormulationProcess.human_attribute_name(:homogeneization_time) %></td>
        <%= content_tag(:td, @formulation_process.homogeneization_time) %>
      </tr>
      <tr class="text-right">
        <td><%= FormulationProcess.human_attribute_name(:temperature) %></td>
        <%= content_tag(:td, @formulation_process.temperature) %>
      </tr>
      <tr class="text-right">
        <td><%= FormulationProcess.human_attribute_name(:total_formulation_time) %></td>
        <%= content_tag(:td, @formulation_process.total_formulation_time) %>
      </tr>
      <tr class="text-center">
        <td colspan="2"><%= FormulationProcess.human_attribute_name(:comment) %></td>
      </tr>
      <tr><%= content_tag(:td, @formulation_process.comment, colspan: 2) %></tr>

    </tbody>
  </table>
</div>

<style media="screen">
  .product-information-container{
    width: 66%;
    display: block;
  }
</style>
