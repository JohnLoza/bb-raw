<div class="col-md-12">
  <%= content_tag(:h5, t('.title'), class: 'text-center') %>
  <table class="table table-striped table-bordered">
    <thead>
      <%= content_tag(:th, Stock.human_attribute_name(:product_id)) %>
      <%= content_tag(:th, Product.human_attribute_name(:provider_id)) %>
      <%= content_tag(:th, Stock.human_attribute_name(:batch)) %>
      <%= content_tag(:th, Stock.human_attribute_name(:invoice_folio)) %>
      <%= content_tag(:th, Stock.human_attribute_name(:invoice_date)) %>
    </thead>
    <tbody>
      <% @order.supplies.includes(stock: {product: :provider}).each do |supply| %>
        <tr>
          <%= content_tag(:td, supply.stock.product) %>
          <%= content_tag(:td, supply.stock.product.provider) %>
          <%= content_tag(:td, supply.stock.batch) %>
          <%= content_tag(:td, supply.stock.invoice_folio) %>
          <%= content_tag(:td, l(supply.stock.invoice_date)) %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
