<html>
  <head>
    <title>Black Brocket Material Processing</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />

    <%= csrf_meta_tags %>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>

  <body>
    <div class="container-fluid">

      <div class="text-center">
        <%= content_tag(:h5, t('.formulation_sheet'), class: 'uppercase') %>
        <h6>Black Brocket de México, S. de R.L. de C.V.</h6>
      </div>

      <div class="row" style="text-align: right;">
        <p style="font-size: .9em;">
          <%= t('.date', date: l(@formulation_process.created_at, format: :long)) %>
        </p>
        <p style="font-size: .9em;">
          <%= t('.developed_by', subject: @formulation_process.user.name) %>
        </p>
      </div>

      <div class="row">
        <%= render 'batch' %>
        <%= render 'product_information' %>
      </div>

      <div class="row">
        <%= render 'supplies' %>
      </div>

      <div class="row">
        <h5 class="text-uppercase text-center">Procesamiento</h5>
        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <td style="color: #FEFEFE;">__________</td>
              <%= content_tag(:td, t('production_orders.processes.process_init_at', class: 'text-uppercase')) %>
            </tr>
            <tr>
              <td></td>
              <td><%= content_tag(:span, t('production_orders.processes.ended_at').html_safe) %>
                <span class="pull-right">Formulación</span></td>
            </tr>
            <tr>
              <td></td>
              <td><%= content_tag(:span, t('production_orders.processes.started_at').html_safe) %>
                <span class="pull-right">Encubetado y Etiq</span></td>
            </tr>
            <tr>
              <td></td>
              <td><%= content_tag(:span, t('production_orders.processes.started_at').html_safe) %>
                <span class="pull-right">Salida de Formulación</span></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </body>

  <style media="screen">
    .uppercase{ text-transform: uppercase; }
    .lowercase{ text-transform: lowercase; }
    .capitalize{ text-transform: capitalize; }

    table.table{ font-size: .8em; }
    table.table tr td{ padding: .3em .5em .3em .5em; }
  </style>
</html>
