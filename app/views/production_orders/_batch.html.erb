<div class="col-md-4">
  <div class="card">
    <div class="card-header" data-background-color="purple">
      <h4 class="title">
        <%= FormulationProcess.human_attribute_name(:batch) %>: <%= @fp.batch %>
      </h4>
    </div>
    <div class="card-content">
      <p>
        <%= t('.day', day: @fp.batch[0..1]) %>
      </p>
      <p>
        <%= t('.month', month: @fp.batch[2]) %> (<%= month(@fp.batch[2]) %>)
      </p>
      <p>
        <%= t('.year', year: @fp.batch[3..4]) %>
      </p>
      <p>
        <%= t('.formulation_equipment', equipment: @fp.batch[5]) %>
      </p>
      <p>
        <%= t('.cycle', cycle: @fp.batch[6..7]) %>
      </p>
      <p>
        <%= t('.packaging', packaging: @fp.batch[8..9]) %>
      </p>
    </div>
  </div>
</div>
