<div class="col-md-8 product-container pull-right">
  <table class="table table-striped table-bordered">
    <tbody>

      <tr>
        <td colspan="2" class="text-center">
          <%= FormulationProcess.human_attribute_name(:product_name) %>: <%= @fp.product_name %>
        </td>
      </tr>
      <tr class="text-right">
        <%= content_tag(:td, t('production_orders.form.formulation_at')) %>
        <%= content_tag(:td, l(@fp.created_at, format: :long)) %>
      </tr>
      <tr class="text-right">
        <%= content_tag(:td, t('production_orders.form.packed_at')) %>
        <%= content_tag(:td, l(@production_order.created_at, format: :long)) %>
      </tr>
      <tr class="text-right">
        <%= content_tag(:td, ProductionOrder.human_attribute_name(:net_amount)) %>
        <%= content_tag(:td, @production_order.net_amount) %>
      </tr>
      <tr class="text-right">
        <%= content_tag(:td, FormulationProcess.human_attribute_name(:number_of_cuvettes)) %>
        <%= content_tag(:td, @fp.number_of_cuvettes) %>
      </tr>
      <tr class="text-right">
        <%= content_tag(:td, ProductionOrder.human_attribute_name(:product_presentation)) %>
        <%= content_tag(:td, @production_order.product_presentation) %>
      </tr>
      <tr class="text-right">
        <%= content_tag(:td, ProductionOrder.human_attribute_name(:packing_type)) %>
        <%= content_tag(:td, @production_order.packing_type) %>
      </tr>
      <tr class="text-right">
        <%= content_tag(:td, ProductionOrder.human_attribute_name(:total_packages)) %>
        <%= content_tag(:td, @production_order.total_packages) %>
      </tr>
      <tr class="text-right">
        <%= content_tag(:td, FormulationProcess.human_attribute_name(:prorated_expiration_date)) %>
        <%= content_tag(:td, @fp.prorated_expiration_date) %>
      </tr>
      <tr class="text-right">
        <%= content_tag(:td, FormulationProcess.human_attribute_name(:gustatory_expiration_date)) %>
        <%= content_tag(:td, @fp.gustatory_expiration_date) %>
      </tr>
      <tr class="text-right">
        <%= content_tag(:td, FormulationProcess.human_attribute_name(:microbial_expiration_date)) %>
        <%= content_tag(:td, @fp.microbial_expiration_date) %>
      </tr>
      <tr class="text-right">
        <%= content_tag(:td, FormulationProcess.human_attribute_name(:product_life)) %>
        <%= content_tag(:td, @fp.product_life) %>
      </tr>
      <tr class="text-center">
        <%= content_tag(:td, ProductionOrder.human_attribute_name(:comment), colspan: 2) %>
      </tr>
      <tr><%= content_tag(:td, @production_order.comment, colspan: 2) %></tr>

    </tbody>
  </table>
</div>

<style media="screen">
  .product-container{
    width: 66%;
    display: block;
  }
</style>
