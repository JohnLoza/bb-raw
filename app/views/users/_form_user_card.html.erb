<div class="col-md-4">
  <div class="card card-profile">
    <div class="card-avatar">
      <%= image_tag @user.avatar_url(:thumb), class: 'img pointer', onclick: '$("#user_avatar").click();' %>
    </div>

    <div class="content">
      <%= content_tag(:h6, @user.persisted? ? @user.display_roles : t('user.no_roles'), class: 'category text-gray') %>
      <h4 class="card-title"></h4>
      <span class="text-center hidden crop-again">
        <%= content_tag(:button, t('crop_avatar'), class: 'btn btn-primary', onclick: '$("#modal").modal("show");') %>
      </span>
    </div>
  </div>
</div>
