<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header" data-background-color="purple">
        <%= content_tag(:h4, t('.title', subject: @order.hash_id), class: 'title') %>
      </div>
      <div class="card-content">
        <h4>
          <%= DevelopmentOrder.human_attribute_name(:required_date) %>:
          <%= l(@order.required_date, format: :long) %>
        </h4>

        <table class="table table-hover">
          <thead>
            <%= content_tag(:th, t('.product')) %>
            <%= content_tag(:th, t('.bulk')) %>
          </thead>
          <tbody>
            <%= render @order.required_products %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="10" class="text-center">
                <%= link_to t(:print), development_order_path(@order, format: :pdf),
                  class: 'btn btn-primary', target: '_blank' %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>

  <%= render partial: '/shared/cards/editor', locals: {user: @order.user} %>
</div>
